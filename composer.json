{
    "name": "yohang/satis-admin",

    "require": {
        "bt51/gaufrette-serviceprovider": "1.0.*",
        "composer/composer":              "1.0.*@dev",
        "composer/satis":                 "dev-master@dev",
        "mheap/silex-assetic":            "*@dev",
        "silex/silex":                    "1.0.*@dev",
        "silex/web-profiler":             "1.0.*@dev",
        "symfony/form":                   "2.2.*",
        "symfony/validator":              "2.2.*",
        "yohang/dependency-tools":        "1.0.*"
    },

    "require-dev": {
        "behat/behat":                  "2.4.*",
        "behat/mink-extension":         "1.0.*",
        "behat/mink-browserkit-driver": "1.0.*",
        "behat/mink-selenium2-driver":  "1.0.*",
        "phpunit/phpunit": "3.7.*"
    },

    "config": {
        "bin-dir": "bin/"
    },

    "autoload": {
        "psr-0": {
            "SatisAdmin": "src"
        }
    },

    "scripts": {
        "post-install-cmd": [
            "Yohang\\DependencyTools::installDeps"
        ],
        "post-update-cmd": [
            "Yohang\\DependencyTools::installDeps"
        ]
    },

    "extra": {
        "dependency-tools": {
            "npm": true,
            "bower": true
        }
    }
}
