{
    "name": "yohang/satis-admin",
    "keywords": ["satis", "interface", "composer", "silex"],
    "require": {
        "bt51/gaufrette-serviceprovider": "1.0.*",
        "composer/composer":              "1.0.*@dev",
        "composer/satis":                 "dev-master@dev",
        "mheap/silex-assetic":            "*@dev",
        "monolog/monolog":                "1.4.*",
        "silex/silex":                    "1.0.*@dev",
        "silex/web-profiler":             "1.0.*@dev",
        "symfony/config":                 "2.2.*",
        "symfony/console":                "2.2.*",
        "symfony/form":                   "2.2.*",
        "symfony/process":                "2.2.*",
        "symfony/security":               "2.2.*",
        "symfony/translation":            "2.2.*",
        "symfony/validator":              "2.2.*",
        "yohang/dependency-tools":        "1.0.*"
    },

    "require-dev": {
        "behat/behat":                  "2.4.*",
        "behat/mink-extension":         "1.0.*",
        "behat/mink-browserkit-driver": "1.0.*",
        "behat/mink-selenium2-driver":  "1.0.*",
        "phpunit/phpunit":              "3.7.*"
    },

    "config": {
        "bin-dir": "bin/"
    },

    "autoload": {
        "psr-0": {
            "SatisAdmin": "src"
        }
    },

    "scripts": {
        "post-install-cmd": [
            "Yohang\\DependencyTools::installDeps"
        ],
        "post-update-cmd": [
            "Yohang\\DependencyTools::installDeps"
        ]
    },

    "extra": {
        "dependency-tools": {
            "npm":   true,
            "bower": true
        }
    }
}
